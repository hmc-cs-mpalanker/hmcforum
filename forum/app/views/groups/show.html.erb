<!-- This file handles the general display for a particular Schmack thread. -->

<div class = "title">
  <strong><%= @group.title %></strong>
</div>

<%= render @group.posts %>

<%- if current_user %>
  <h2>Create a New Post</h2>
  <%= render 'posts/form', group: @group %>
<% end %>

<%= link_to 'Back', groups_path %>
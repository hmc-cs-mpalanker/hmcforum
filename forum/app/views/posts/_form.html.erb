<%= form_for([@group, @group.posts.build]) do |form| %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :post_title %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, id: :post_content %>
  </div>

  <div>
    <%= form.number_field :profile_id, :value => current_user.profile.id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
